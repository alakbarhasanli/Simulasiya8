@model DoctorCreateDto
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
        <span class="text-center text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department">Department</label>
        <input asp-for="Department" class="form-control">
        <span class="text-center text-danger" asp-validation-for="Department"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoctorPhoto">DoctorPhoto</label>
        <input asp-for="DoctorPhoto" class="form-control" type="file">
        <span class="text-center text-danger" asp-validation-for="DoctorPhoto"></span>
    </div>
    <select class="form-select" asp-for="TreatmentId" asp-items="new SelectList(ViewBag.Treatment,nameof(Treatment.Id),nameof(Treatment.Name))">
        <option selected>Choose Treatment</option>
        
    </select>
    <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>