 @model ICollection<Doctor>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <a type="button" class="btn-primary" asp-area="admin" asp-controller="Doctor" asp-action="Create">Create</a>
                    <thead>
                        <tr>
                            <th>Id </th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Photo</th>

                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Department</td>
                            <td><img src="~/Upload/Images/@item.DoctorImageUrl" height="100" width="100" alt=".."></img></td>
                            <td><a type="button" class="btn-warning" asp-area="admin" asp-controller="Doctor" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                            <td><a type="button" class="btn-primary" asp-area="admin" asp-controller="Doctor" asp-action="Info" asp-route-id="@item.Id">Info</a></td>
                            <td><a type="button" class="btn-danger" asp-area="admin" asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
            </div>
<!-- End of Main Content -->
