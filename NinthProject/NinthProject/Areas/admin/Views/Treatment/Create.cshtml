@model TreatmentCreateDto
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
        <span class="text-center text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control">
        <span class="text-center text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="TreatmentPhoto">TreatmentPhoto</label>
        <input asp-for="TreatmentPhoto" class="form-control" type="file">
        <span class="text-center text-danger" asp-validation-for="TreatmentPhoto"></span>
    </div>
    <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>

    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>